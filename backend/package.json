{
    "name": "hadith-api",
    "version": "1.0.0",
    "description": "Hadith Translation System API - Fastify Backend",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "setup:lulu": "tsx scripts/import_lulu.ts && tsx scripts/update_lulu_kitabs.ts && tsx scripts/update_lulu_info.ts && tsx scripts/populate_lulu_kitabs_collection.ts",
        "setup:adab": "tsx scripts/import_adab.ts && tsx scripts/update_adab_kitabs.ts && tsx scripts/update_adab_info.ts && tsx scripts/populate_adab_kitabs_collection.ts",
        "setup:riyad": "tsx scripts/import_riyad.ts && tsx scripts/update_riyad_info.ts && tsx scripts/populate_riyad_kitabs_collection.ts"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.0",
        "@fastify/multipart": "^9.4.0",
        "@fastify/static": "^9.0.0",
        "@google/generative-ai": "^0.21.0",
        "@sentry/node": "^10.38.0",
        "@sentry/profiling-node": "^10.38.0",
        "csv-parse": "^6.1.0",
        "dotenv": "^16.0.0",
        "fastify": "^5.0.0",
        "fastify-type-provider-zod": "^6.1.0",
        "lru-cache": "^11.2.5",
        "meilisearch": "^0.55.0",
        "mongodb": "^6.0.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/node": "^20.19.30",
        "ts-node": "^10.9.2",
        "tsx": "^4.0.0",
        "typescript": "^5.9.3"
    }
}

<div
    id="hadith-modal"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4"
>
    <div
        class="bg-white rounded-2xl shadow-xl max-w-2xl w-full transform transition-all scale-95 opacity-0 flex flex-col max-h-[90vh]"
        id="hadith-modal-content"
    >
        <div
            class="p-6 border-b border-gray-100 flex justify-between items-center shrink-0"
        >
            <div>
                <h3 class="text-xl font-bold text-gray-800">แก้ไขหะดีษ</h3>
                <p class="text-sm text-gray-500 font-mono" id="modal-hadith-id">
                </p>
            </div>
            <button
                id="close-hadith-modal"
                class="text-gray-400 hover:text-gray-600">✕</button
            >
        </div>

        <form id="hadith-form" class="p-6 space-y-4 overflow-y-auto flex-1">
            <input type="hidden" id="edit-id" name="hadith_id" />

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >สถานะ</label
                    >
                    <select
                        id="edit-status"
                        name="status"
                        class="w-full px-4 py-2 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary outline-none"
                    >
                        <option value="pending">⏳ Pending</option>
                        <option value="translated"
                            >✅ Verified (Translated)</option
                        >
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >เลขที่ (Hadith No)</label
                    >
                    <input
                        type="text"
                        id="edit-no"
                        disabled
                        class="w-full px-4 py-2 rounded-xl border border-gray-200 bg-gray-50 text-gray-500"
                    />
                </div>
            </div>

            <!-- Kitab Info (Denormalized) -->
            <div class="p-4 bg-gray-50 rounded-xl space-y-3">
                <h4 class="text-xs font-bold text-gray-500 uppercase">
                    ข้อมูลหมวด (Kitab)
                </h4>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs text-gray-500 mb-1"
                            >หมวด (ไทย)</label
                        >
                        <input
                            type="text"
                            id="edit-kitab-th"
                            name="kitab_th"
                            class="w-full px-3 py-1.5 rounded-lg border border-gray-200 text-sm"
                        />
                    </div>
                    <div>
                        <label class="block text-xs text-gray-500 mb-1"
                            >หมวด (อาหรับ)</label
                        >
                        <input
                            type="text"
                            id="edit-kitab-ar"
                            name="kitab_ar"
                            class="w-full px-3 py-1.5 rounded-lg border border-gray-200 text-sm font-arabic"
                            dir="rtl"
                        />
                    </div>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                    >เนื้อหา (อาหรับ)</label
                >
                <textarea
                    id="edit-content-ar"
                    name="content_ar"
                    rows="4"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary outline-none font-arabic text-lg leading-relaxed"
                    dir="rtl"></textarea>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                    >เนื้อหา (ไทย)</label
                >
                <textarea
                    id="edit-content-th"
                    name="content_th"
                    rows="6"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary outline-none"
                ></textarea>
            </div>
        </form>

        <div class="p-6 border-t border-gray-100 shrink-0 flex gap-3">
            <button
                type="button"
                id="save-hadith-btn"
                class="flex-1 px-4 py-2 bg-primary text-white rounded-xl hover:bg-primary-dark transition-colors font-medium shadow-lg shadow-primary/30"
            >
                บันทึกการแก้ไข
            </button>
            <button
                type="button"
                id="cancel-hadith-btn"
                class="flex-1 px-4 py-2 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-colors font-medium"
            >
                ยกเลิก
            </button>
        </div>
    </div>
</div>

<script>
    import { updateHadith } from "../../lib/api";

    const modal = document.getElementById("hadith-modal");
    const content = document.getElementById("hadith-modal-content");
    const saveBtn = document.getElementById("save-hadith-btn");

    window.openHadithModal = (hadith) => {
        if (!modal || !content) return;

        // Populate fields
        document.getElementById("modal-hadith-id")!.textContent =
            `${hadith.hadith_book.toUpperCase()} #${hadith.hadith_no}`;
        (document.getElementById("edit-id") as HTMLInputElement).value =
            hadith.hadith_id;
        (document.getElementById("edit-status") as HTMLInputElement).value =
            hadith.status;
        (document.getElementById("edit-no") as HTMLInputElement).value =
            hadith.hadith_no;

        // Kitab
        (document.getElementById("edit-kitab-th") as HTMLInputElement).value =
            hadith.kitab?.th || "";
        (document.getElementById("edit-kitab-ar") as HTMLInputElement).value =
            hadith.kitab?.ar || "";

        // Content
        (document.getElementById("edit-content-ar") as HTMLInputElement).value =
            hadith.content?.ar || "";
        (document.getElementById("edit-content-th") as HTMLInputElement).value =
            hadith.content?.th || "";

        modal.classList.remove("hidden");
        setTimeout(() => {
            content.classList.remove("scale-95", "opacity-0");
            content.classList.add("scale-100", "opacity-100");
        }, 10);
    };

    function closeModal() {
        if (!modal || !content) return;
        content.classList.remove("scale-100", "opacity-100");
        content.classList.add("scale-95", "opacity-0");
        setTimeout(() => modal.classList.add("hidden"), 200);
    }

    [
        document.getElementById("close-hadith-modal"),
        document.getElementById("cancel-hadith-btn"),
    ].forEach((el) => el?.addEventListener("click", closeModal));

    saveBtn?.addEventListener("click", async () => {
        const id = (document.getElementById("edit-id") as HTMLInputElement)
            .value;
        const status = (
            document.getElementById("edit-status") as HTMLInputElement
        ).value;

        // Construct payload
        const payload = {
            status: status as any,
            kitab: {
                th: (
                    document.getElementById("edit-kitab-th") as HTMLInputElement
                ).value,
                ar: (
                    document.getElementById("edit-kitab-ar") as HTMLInputElement
                ).value,
            },
            content: {
                ar: (
                    document.getElementById(
                        "edit-content-ar",
                    ) as HTMLInputElement
                ).value,
                th: (
                    document.getElementById(
                        "edit-content-th",
                    ) as HTMLInputElement
                ).value,
            },
        };

        try {
            await updateHadith(id, payload);
            alert("บันทึกเรียบร้อย ✅");
            window.location.reload();
        } catch (error) {
            console.error(error);
            alert("บันทึกไม่สำเร็จ");
        }
    });
</script>

---
import Sidebar from "../components/admin/Sidebar.astro";
import "../styles/global.css"; // Ensure global styles are loaded

// Basic Security Check (Fail-safe)
// If middleware fails or is disabled, this ensures protection at page level.
const cookieHeader = Astro.request.headers.get("cookie") || "";
const isAuthenticated = cookieHeader.includes("admin_key=");

if (!isAuthenticated && !Astro.url.pathname.includes("/admin/login")) {
    return Astro.redirect("/admin/login");
}

interface Props {
    title: string;
}

const { title } = Astro.props;

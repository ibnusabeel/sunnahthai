    // Fetch article if editing
    if (id) {
        const artRes = await fetch(`${API_BASE_URL}/api/articles/${id}`);
        if (artRes.ok) {
            article = await artRes.json();
        }
    }
} catch (e) {
    console.error("Error loading editor data:", e);
}

---
import AdminLayout from "../../layouts/AdminLayout.astro";
import BookEditModal from "../../components/admin/BookEditModal.astro";
import { getStats, getDynamicBookNames, BOOK_NAMES } from "../../lib/api";

const stats = await getStats();
let bookNames = { ...BOOK_NAMES };

try {
    const dynamicNames = await getDynamicBookNames();
    bookNames = { ...bookNames, ...dynamicNames };
} catch (e) {
    console.error("Failed to fetch dynamic names", e);
}

// Merge data for display
const books = Object.keys(bookNames).map((key) => {
    // If stats doesn't have this book, use default/empty stats
    const bookStat = stats[key] || {
        overall: { total: 0, translated: 0, pending: 0, percentage: 0 },
    };
    const info = bookNames[key];

    return {
        book: key,
        th: info.th,
        ar: info.ar,
        description: info.description || "", // Assuming dynamic names API returns description too (it does in backend)
        ...bookStat.overall,
    };
});
---

<AdminLayout title="จัดการหนังสือ (Books)">
    <div
        class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden"
    >
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead
                    class="bg-gray-50 text-gray-500 text-xs uppercase font-semibold"
                >
                    <tr>
                        <th class="px-6 py-4">ชื่อหนังสือ (TH/AR)</th>
                        <th class="px-6 py-4 text-center">ความคืบหน้า</th>
                        <th class="px-6 py-4 text-center">แปลแล้ว</th>
                        <th class="px-6 py-4 text-right">จัดการ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {
                        books.map((b) => (
                            <tr class="hover:bg-purple-50/30 transition-colors group">
                                <td class="px-6 py-4">
                                    <div class="font-bold text-gray-800 text-lg">
                                        {b.th}
                                    </div>
                                    <div class="text-gray-400 font-arabic text-sm">
                                        {b.ar}
                                    </div>
                                    <div class="text-xs text-gray-300 font-mono mt-1">
                                        {b.book}
                                    </div>
                                </td>
                                <td class="px-6 py-4 w-1/4">
                                    <div class="flex items-center gap-3">
                                        <span class="text-sm font-bold text-gray-700 w-8 text-right">
                                            {b.percentage}%
                                        </span>
                                        <div class="w-full bg-gray-100 rounded-full h-2.5 overflow-hidden">
                                            <div
                                                class={`h-full rounded-full ${b.percentage === 100 ? "bg-green-500" : "bg-primary"}`}
                                                style={`width: ${b.percentage}%`}
                                            />
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        {b.translated.toLocaleString()}
                                    </span>
                                    <span class="text-xs text-gray-400 ml-1">
                                        / {b.total.toLocaleString()}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button
                                        onclick={`openBookEditModal(${JSON.stringify(b)})`}
                                        class="px-4 py-2 bg-white border border-gray-200 text-gray-600 rounded-xl hover:bg-primary hover:text-white hover:border-primary transition-all shadow-sm text-sm font-medium"
                                    >
                                        ✏️ แก้ไข
                                    </button>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </div>

    <BookEditModal />
</AdminLayout>

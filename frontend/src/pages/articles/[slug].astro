import BaseLayout from "../../layouts/BaseLayout.astro";
import { getArticle, getCategories, type ArticleItem } from "../../lib/api";
import "@lakshaykumar/rich-text-editor/src/styles/rte.css";

const { slug } = Astro.params;
let article: ArticleItem | null = null;
let categoryName = "";

try {
    if (slug) {
        // Fetch article and categories in parallel
        const [articleRes, categoriesRes] = await Promise.all([
            getArticle(slug),
            getCategories(),
        ]);
        article = articleRes;

        const cat = categoriesRes.categories.find(
            (c: any) => c.slug === article?.category,
        );
        if (cat) categoryName = cat.name;
    }
} catch (e) {
    console.error("Failed to fetch article:", e);
    return Astro.redirect("/404");
}

if (!article) return Astro.redirect("/404");

// Clean description for SEO (remove HTML tags)
const cleanDesc =
    article.content.replace(/<[^>]*>/g, "").substring(0, 160) + "...";
